= bootstrap_form_for [:admin, @announcement], layout: :horizontal, html: {multipart: true} do |f|
  - Announcement.locale_columns(:title).each do |column|
    = f.text_field column
  = f.email_field :reply_to, placeholder: 'service@users.parallel.ru', input_html: { class: "input-xxlarge" }
  = f.form_group do
    = f.check_box :is_special
  - Announcement.locale_columns(:body).each do |column|

    = markdown_area f, column, help: t(".markdown_help").html_safe, rows: 10

  = f.file_field :attachment

  = f.form_group do
    = f.primary t("actions.save")
